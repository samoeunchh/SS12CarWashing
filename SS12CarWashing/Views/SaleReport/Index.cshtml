
@{
    ViewData["Title"] = "Sale Report";
}
<div class="container">
 <div class="card noprint">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label class="form-lable">From Date</label>
                    <input type="date" id="FromDate" class="form-control"/>
                </div>
            </div>
            <div class="col-4">
                 <div class="form-group">
                    <label class="form-lable">To Date</label>
                    <input type="date" id="ToDate" class="form-control"/>
                </div>
            </div>
            <div class="col-4">
                <br/>
                <button class="btn btn-primary" id="view">View</button>
                <button class="btn btn-primary" id="print">Print</button>
            </div>
        </div>
    </div>
  </div>
  </div>
  <br/>
  <div class="container">
      <div class="row">
          <div class="col-12">
              <table class="table table-bordered" id="saleList">
                  <thead>
                      <tr>
                          <th>Invoice Number</th>
                          <th>Issue Date</th>
                          <th>Customer Name</th>
                          <th>Total</th>
                          <th>Discount</th>
                          <th>Grand Total</th>
                      </tr>
                  </thead>
                  <tbody></tbody>
              </table>
          </div>
      </div>
  </div>
  @section Scripts{
      <script>
          $(document).ready(function(){
              $("#view").click(function(){
                  if($("#FromDate").val() && $("#ToDate").val()){
                      $.ajax({
                          method:"GET",
                          url:"/SAleReport/GetSale/?FromDate="+ $("#FromDate").val() +"&ToDate="+ $("#ToDate").val(),
                          contentType:"application/json",
                          success:function(data){
                             $.each(data,function(i,v){
                                 var row ="<tr><td>"+ v.invoiceNumber;
                                 row +="</td><td>"+ v.issueDate;
                                 row += "</td><td>"+ v.customerName;
                                 row += "</td><td>"+ v.total;
                                 row += "</td><td>"+ v.discount;
                                 row += "</td><td>"+ v.grandTotal;
                                 row += "</td></tr>";
                                 $("#saleList").append(row);
                             });
                          },error:function(error){
                              console.log(error);
                          }
                      })
                  }else{
                      alert("Please select date!");
                  }
              });
          });
      </script>
  }

